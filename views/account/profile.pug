extends ../layout

block content
  .row
    .col-sm-3
      // left col
      .text-center
        img.avatar.img-circle.img-thumbnail(src='http://ssl.gstatic.com/accounts/ui/avatar_2x.png' alt='avatar')
        h6 Upload a different photo...
        input.text-center.center-block.file-upload(type='file')
      hr
      
      
    // /col-3
    .col-sm-9
      form#registrationForm.form(action='#' method='post')
        .form-group
          .col-xs-6
            label(for='first_name')
              h4 Full Name
            div#first_name.form-control #{req.user.name}
        .form-group
          .col-xs-6
            label(for='phone')
              h4 Username
            div#phone.form-control #{req.user.username}
        .form-group
          .col-xs-6
            label(for='email')
              h4 Email
            div#email.form-control #{req.user.email}
            
        .form-group
          .col-xs-12
            br
            a.btn.btn-lg.btn-success.pull-right(href='/s')
              i.glyphicon.glyphicon-ok-sign
              |  Edit
            

block scripts
  script.
      $(document).ready(function () {


          var readURL = function (input) {
              if (input.files && input.files[0]) {
                  var reader = new FileReader();

                  reader.onload = function (e) {
                      $('.avatar').attr('src', e.target.result);
                  }

                  reader.readAsDataURL(input.files[0]);
              }
          }


          $(".file-upload").on('change', function () {
              readURL(this);
              // todo upload avatar
          });
      });
  
