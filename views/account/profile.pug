extends ../layout

block content
  .row
    .col-sm-3
      // left col
      .text-center
        img.avatar.img-circle.img-thumbnail(src='http://ssl.gstatic.com/accounts/ui/avatar_2x.png' alt='avatar')
        h6 Upload a different photo...
        input.text-center.center-block.file-upload(type='file')
      hr
      br
      .panel.panel-default
        .panel-heading
          | Website 
          i.fa.fa-link.fa-1x
        .panel-body
          a(href='http://bootnipets.com') bootnipets.com
      ul.list-group
        li.list-group-item.text-muted
          | Activity 
          i.fa.fa-dashboard.fa-1x
        li.list-group-item.text-right
          span.pull-left
            strong Shares
          |  125
        li.list-group-item.text-right
          span.pull-left
            strong Likes
          |  13
        li.list-group-item.text-right
          span.pull-left
            strong Posts
          |  37
        li.list-group-item.text-right
          span.pull-left
            strong Followers
          |  78
      
    // /col-3
    .col-sm-9
      form#registrationForm.form(action='#' method='post')
        .form-group
          .col-xs-6
            label(for='first_name')
              h4 Username
            input#first_name.form-control(type='text' name='first_name' placeholder='first name' title='enter your first name if any.')
        .form-group
          .col-xs-6
            label(for='last_name')
              h4 Full name
            input#last_name.form-control(type='text' name='last_name' placeholder='last name' title='enter your last name if any.')
        .form-group
          .col-xs-6
            label(for='phone')
              h4 Phone
            input#phone.form-control(type='text' name='phone' placeholder='enter phone' title='enter your phone number if any.')
        .form-group
          .col-xs-6
            label(for='email')
              h4 Email
            input#email.form-control(type='email' name='email' placeholder='you@email.com' title='enter your email.')
        
            
        .form-group
          .col-xs-6
            label(for='password')
              h4 Password
            input#password.form-control(type='password' name='password' placeholder='password' title='enter your password.')
        .form-group
          .col-xs-6
            label(for='password2')
              h4 Verify
            input#password2.form-control(type='password' name='password2' placeholder='password2' title='enter your password2.')
        .form-group
          .col-xs-12
            br
            button.btn.btn-lg.btn-success.pull-right(type='submit')
              i.glyphicon.glyphicon-ok-sign
              |  Save
            

block scripts
  script.
      $(document).ready(function () {


          var readURL = function (input) {
              if (input.files && input.files[0]) {
                  var reader = new FileReader();

                  reader.onload = function (e) {
                      $('.avatar').attr('src', e.target.result);
                  }

                  reader.readAsDataURL(input.files[0]);
              }
          }


          $(".file-upload").on('change', function () {
              readURL(this);
          });
      });
  
